# ===========================================
# QualyIT Production Environment Variables
# Para usar con Coolify
# ===========================================

# ===========================================
# REQUERIDAS
# ===========================================

# PostgreSQL (Coolify creará esto automáticamente si usas su PostgreSQL)
POSTGRES_USER=qualyit
POSTGRES_PASSWORD=CAMBIAR_POR_PASSWORD_SEGURO
POSTGRES_DB=qualyit

# Clerk Authentication (https://clerk.com)
# Crear aplicación en Clerk Dashboard y copiar keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_...
CLERK_SECRET_KEY=sk_live_...
CLERK_WEBHOOK_SECRET=whsec_...

# URL de la aplicación (tu dominio en Coolify)
NEXT_PUBLIC_APP_URL=https://qualyit.tudominio.com
NEXT_PUBLIC_APP_NAME=QualyIT

# ===========================================
# OPCIONALES (para funcionalidad completa)
# ===========================================

# Cloudflare R2 Storage - Para subida de fotos
# Sin esto, las fotos no se guardarán
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=qualyit-uploads
R2_PUBLIC_URL=

# Upstash Redis - Para caché y rate limiting
# Sin esto, la app funciona pero más lenta
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Novu - Para notificaciones push
# Sin esto, no hay notificaciones push
NOVU_API_KEY=

# Firebase Cloud Messaging - Para push en móviles
# Sin esto, no hay push notifications en PWA
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
